<header id="root_header">
<div class="container">
	<h1><a href="/">서평</a></h1>
	<nav>
		<ul class="header_items">
			<%= content_tag(:li, icon_link_to('home', root_path)) %>
			<%= content_tag(:li, icon_link_to('book', books_path)) %>
			<%= content_tag(:li, icon_link_to('file', reviews_path)) %>
			<%= content_tag(:li, icon_link_to('chat', frees_path)) %>
			<% if signed_in? %>
				<%= content_tag(:li, link_to_user(current_user.name, 'user', current_user))%>
				<%= content_tag(:li, active_link_to('나가기', signout_path, method: "delete"), id: "outting") %>
			<% else %>
				<%= content_tag(:li, active_link_to('들어가기', signin_path, class: 'ui button')) %>
			<% end %>
		</ul>
	</nav>
</div>
</header>
