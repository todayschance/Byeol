<html lang="ko">
<head>
  <title><%= html_title(yield(:title)) %></title>

  <meta charset="utf-8" />
  <meta http-equiv="Content-Type" content="text/html" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
  <%= csrf_meta_tags %>

  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/0.12.0/css/semantic.min.css">
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/0.12.0/javascript/semantic.min.js"></script>
  <!-- Needed script&link -->

</head>
<body>

<!-- Only for mobile -->
<nav class="ui fixed menu for mobile" id="nav_for_mobile">
  <a class="launch item"><i class="list layout icon"></i>Content</a>
  <div class="right menu">
    <%= render 'layouts/user_dropmenu' %>
  </div>
</nav>

<%= render 'layouts/sidebar' %>

<%= render "layouts/flash" %>

<div class="wide wrapper">
  <div id="root_top">
    <div id="root_logo">
      <%= image_tag "logo.png", alt: "Logo Image" %>
      <h1><%= link_to "별바다", root_path %></h1>
    </div>


    <!-- Only for desktop -->
    <nav class="ui secondary menu for desktop" id="nav_for_desktop">
    <div class="right menu">
      <%= active_link_to "홈", root_path, class: "item" %>
      <%= active_link_to "책", "/books", class: "item" %>
      <%= active_link_to "서평", "/reviews", class: "item" %>
      <%= active_link_to "감상", "/feelings", class: "item" %>
      <%= active_link_to "자유", "/free", class: "item" %>
      <%= render 'layouts/user_dropmenu' %>
    </div>
    </nav>
  </div><!-- /top -->


  <div class="ui section divider" id="root_divider"></div>

  <noscript>
    JavaScript를 쓰지 못하면 정상적인 이용이 불가능합니다!
  </noscript>


</div><!-- /wrapper -->

<div id="yield">
  <%= yield %>
</div>

<%= render "layouts/debug" %>  

<footer id="root_footer">
  <div class="wide wrapper">
    <div></div>
    <div class="ui inverted text menu">
      <%= active_link_to "이 사이트에 대해", about_path, class: "item" %>
      <%= active_link_to "도움!", help_path, class: "item" %>
      <% if signed_in? %>
        <%= active_link_to "사용자들", users_path, class: "item" %>
      <% end %>
    </div>
  </div>
</footer>
</body>
</html>
