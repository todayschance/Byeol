@charset "utf-8";

@import "share/_normalize";
@import "share/_grid";
@import "share/_settings";

body {
	background-image: url(<%= asset_url "backgroundtexture.png" %>);
	background-color:  #f9f9f9;
	overflow-x: hidden;
	font-family: $font-body;
}

a {
	text-decoration: none;
	color: #0063EC;
}
a:hover {
	border-bottom: 1px black;
}

.ui.error.message { display: block !important; }

.wrapper {
	min-width: 300px;
	margin: auto;
	margin-bottom: 1rem;
	height: auto;
}

.wrapper.wide { margin-left: 3%; margin-right: 3%; }
.wrapper.small { margin-left: 1%; margin-right: 1%; }
.wrapper.inner { margin-left: 4%; margin-right: 4%; }

.mobile_text_right { text-align: right; }
.mobile_text_center { text-align: center; }

// 
// Layouts'
// 
#root_top { margin-top: 1.5rem; height: 2rem; }
#root_divider { margin-top: .8rem; }
#nav_for_mobile {
	top: -1.4rem;
	opacity: .9;
	background-color: rgba(255, 255, 255, .5);
	transition: all .2s;
}
#nav_for_mobile.inverted { background-color: #333; }
#root_logo {
	width: 150px;
	margin: auto;
	margin-bottom: 5%;
	text-decoration: none;
	img {
		float: left;
		padding-right: 10px;
		width: 27px;
	}
	h1 {
		margin: 0; padding: 0;
		float: left;
		font-weight: normal;
		font-size: 215%;
		font-family: $font-logo;
		text-shadow: 0 1px 1px white;
		a { text-decoration: none; color: inherit; }
	}
} // end of #logo
#root_footer {
	background-color: #2d2d2d;
	box-shadow: 1px 1px 1px #000;
	color: white;
	text-shadow: 0 1px 0px black;
	padding: 1rem;
}
#root_header {
	width: 100%;
	margin: 5% 0;
	h1, h2 {
		text-align: center;
		font-weight: normal;
	}
	h1 {
		letter-spacing: 1px;
		margin-bottom: 1%;
		font-size: 140%;
	}
	h2 {
		font-size: 100%;
	}
}


// For Large Size
@media only screen and (min-width: 1024px) {
	.wrapper.wide { margin-left: 10% !important; margin-right: 10% !important; }
	.wrapper.small { margin-left: 3% !important; margin-right: 3% !important; }
	.wrapper.inner { margin-left: 13% !important; margin-right: 13% !important; }
}

@media only screen and (min-width: 768px) and (max-width: 1023px) {
}

// For Desktop
@media only screen and (min-width: 768px) {
	.wrapper.wide { margin-left: 5%; margin-right: 5%; }
	.wrapper.small { margin-left: 2%; margin-right: 2%; }
	.wrapper.inner { margin-left: 7%; margin-right: 7%; }

	.wrapper { margin-bottom: 2rem; }

	#root_top { margin-top: 0; }
	#root_logo { width: auto; }

	#nav_for_desktop {
		margin: 0;
		float: right;
		height: 43px;
	}

	.mobile_text_right,
	.mobile_text_center { text-align: inherit; }
}

// Developements
#debug {
	word-wrap: break-word;
}